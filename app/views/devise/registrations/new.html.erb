<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" }) do |f| %>
	<%= devise_error_messages! %>
	<h2 class="form-signin-heading">Estilista's Shop</h2>

  <%= f.email_field :username, :class => 'form-control', :placeholder => 'Correo' %>

  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Contraseña' %>
  <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => ' Confirmar Contraseña' %>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesión</button>
  <%= render "devise/shared/links" %>
  <p class="copyright">Copyright &copy; Estilista's Shop</p>
<% end %>

