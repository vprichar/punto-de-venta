
<div class="create_an_item">
  <%= form_for :custom_item, :url => url_for(:controller => "sales", :action => "create_custom_item", :sale_id => @sale.id, :format => :js), :method => "get", :remote => true, :html => { :class => "form_custom_item"} do |f| %>
    
    <div class="form-group">
      <label>Categoría</label>
      <%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"}  %>
    </div>
    <div class="form-group">
      <label></label>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Nombre" %>
    </div>
    <div class="form-group">
      <label>Descripción</label>
      <%= f.text_area :description, :class => "form-control", :placeholder => "Descripción" %>
    </div>
    <div class="form-group">
      <label>Precio</label>
      <%= f.text_field :price, :class => "form-control", :placeholder => "Precio" %>
    </div>
    <div class="form-group">
      <label>Cantidad</label>
      <%= f.text_field :stock_amount, :class => "form-control", :placeholder => "Cantidad" %>
    </div>
    <div class="form-group"><%= f.submit 'Agregar Articulo', :class => "btn close_custom_modal" %></div>
        
  <% end %>
</div>