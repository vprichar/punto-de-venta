<% unless @sale.customer.blank? %>
	<h4 class="text-primary">
		<span class="glyphicon glyphicon-user"></span> Cus
	</h4>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
         <!--  <th>Last Name</th> -->
          <th>Correo</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <!-- <th>City</th>
          <th>State</th> -->
          <th>CURP</th>
        </tr>
      </thead>

      <tbody>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :customer, Customer.find(@sale.customer.id) do |e| %>
            <tr>
              <td><%= e.text_field :first_name, :class => "form-control", :placeholder => "Nombre", :readonly => true %></td>
              <!-- <td><%= e.text_field :last_name, :class => "form-control", :placeholder => "Last Name", :readonly => true %></td> -->
              <td><%= e.text_field :email_address, :class => "form-control", :placeholder => "Correo", :readonly => true %></td>
              <td><%= e.text_field :phone_number, :class => "form-control", :placeholder => "Teléfono", :readonly => true %></td>
              <td><%= e.text_field :address, :class => "form-control", :placeholder => "Dirección", :readonly => true %></td>
             <!--  <td><%= e.text_field :city, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :state, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td> -->
              <td><%= e.text_field :zip, :class => "form-control", :placeholder => "CURP", :readonly => true %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>