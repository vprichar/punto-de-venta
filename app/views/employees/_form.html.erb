<%= form_for(@employee) do |f| %>
  <%= render :partial => 'template/form_errors', :object => @employee %>

<div class="panel panel-default">
  <div class="panel-body">

   
    

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Nombre</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Nombre" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>RFC</label>
          <%= f.text_field :rfc, :class => "form-control", :placeholder => "RFC" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Dirección</label>
          <%= f.text_field :address, :class => "form-control", :placeholder => "Dirección" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Teléfono</label>
          <%= f.text_field :phone, :class => "form-control", :placeholder => "Teléfono" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Correo</label>
          <%= f.text_field :email, :class => "form-control", :placeholder => "Correo" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Agregar Empleado', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
